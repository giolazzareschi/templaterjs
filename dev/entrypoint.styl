@import url('https://fonts.googleapis.com/css?family=Lato');

html, body
  height 100%

body
  font-family 'Lato', sans-serif
  font-weight 700
  font-size 1em
  color #444
  overflow-x hidden

.btn-templater
  position relative
  border-radius 50px
  padding .5em 1em
  background-image linear-gradient(45deg, #cc11c6, #ff7000)
  border none
  color #fff
  outline none
  transition .15s box-shadow ease-out
  display inline-block
  text-decoration none
  font-size 1em
  box-shadow 0 6px 10px -2px rgba(75,45,207,.25)

  &:hover
    box-shadow 0 6px 10px -2px rgba(75,45,207,.25)

.mukta
  font-family 'Mukta', sans-serif

.container
  width 1280px
  margin 0 auto

@media screen and (max-width 1280px)
  .container
    width 1024px

@media screen and (max-width 1024px)
  .container
    width 650px

@media screen and (max-width 650px)
  .container
    width 300px