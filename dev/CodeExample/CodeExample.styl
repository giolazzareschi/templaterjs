.CodeExample
  position relative
  background #333
  displayflex()
  flexdirection(column)
  padding 1em 0
  border-radius 4px
  box-shadow 0 6px 10px -2px rgba(22, 75, 195, .25)
  max-width 960px
  margin 0 auto
  text-align left
  padding-left 4em

  pre.ft-syntax-highlight
    padding 0
    background-color transparent 
    background-image none

    code
      padding 0
      max-height 550px

      .line-spacer
        padding 1em 0

      .string
        color #ffe300

    &::before
      content none

    code
      margin auto