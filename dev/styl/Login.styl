.login-screen
	position: absolute
	top: 50%
	width: 100%
	left: 0px
	height: auto
	align-items: center
	transform: translateY(-50%)
	displayflex: flex
	displayflexdirection: column
	
	.row-login
		padding: 10px 0px
		
		input
			padding: 20px
			border-radius: 3px
			border: 1px solid #ddd
		
.login-screen-header
	h1
		text-align: center
		height: 100%
		display: block
		position: relative
		margin: 0px
		height: 80px
		line-height: 80px

.login-screen-footer
	displayflex: flex
	width: 100%
	height: 100%
	
	button
		display: block
		width: 100%
		height: 100%
		text-align: center
		outline: none
		background: #4799e0
		font-size: 23px
		font-weight: 600
		color: #fff
		text-transform: uppercase