.login-screen
	position: absolute
	top: 0%
	width: 100%
	left: 0px
	height: 100%
	align-items: center
	displayflex: flex
	displayflexdirection: column
	background: url(../images/bglogin.jpg) no-repeat center center
	background-size: 100% auto
	
	.login-screen-mask
		displayflex: flex
		displayflexdirection: column
		position: relative
		width: 100%
		height: 100%
		align-items: center
		background-color: rgba(255,255,255,.75)

		.vcenter
			displayflex: flex
			displayflexdirection: column
			align-items: center
			width: 80%
			top: 50%
			position: relative
			transform: translateY(-50%)

	.row-login
		padding: 10px 0px
		width: 100%
		
		input
			padding: 20px
			border-bottom: 2px solid #00adff
			width: 100%
			outline: none
			transition: border-bottom-color .25s ease
			
			&:focus
				border-bottom-color: #a537f9
		
.login-screen-header
	h1
		text-align: center
		height: 100%
		display: block
		position: relative
		margin: 0px
		height: 80px
		line-height: 80px

.login-screen-footer
	displayflex: flex
	width: 100%
	height: 100%
	
	button
		display: block
		width: 100%
		height: 100%
		text-align: center
		outline: none
		background: #4799e0
		font-size: 23px
		font-weight: 600
		color: #fff
		text-transform: uppercase