*
	padding: 0px
	margin: 0px
	border: 0px
	box-sizing: border-box
	z-index: 0

html,body
	height: 100%
	overflow: hidden

body
	transition padding .25s ease-out
	font-family: Helvetica, Verdana, Arial, sans-serif
	font-size: 13px
	color: #333

ul,ol
	list-style: none
	
a
	color: blue
	
	&:visited
		color: blue
	&:active
		color: #05456b

#entry_point
	position: absolute
	top: 0px
	left: 0px
	height: 100%
	border:1px solid #ddd
	box-shadow 0px 0px 15px -4px #000
	background-color: #fff
	width: 100%
	right: 0px
	bottom: 0px
	margin: auto
	will-change: width
	displayflex: flex
	displayflexdirection: column
	overflow-y: auto

	.main-header
		border-bottom: 1px solid #ccc
		flex: 0 0 60px
		box-shadow: 0px 1px 4px -3px #000
		z-index: 2
		
		ul
			displayflex: flex
			li
				flex: 0 0 40px
				padding: 23px 0px 22px
				text-align: center

				&.main-button
					line-height: 15px
					font-size: 20px
					color: #888
					flex: 0 0 60px
				
				&.logo
					flex: 1 0 auto
					padding: 0px
					line-height: 65px
					text-align: left
	
	.main-content
		flex: 1 1 auto
		position: relative
		overflow-y: auto
		overflow-x: hidden

	.main-footer
		flex: 0 0 0px

.centerize
	width: 1024px
	margin: 0px auto
	
.hide
	display: none
	
.fleft
	float:left

.fright
	float:right
	
.fclear
	clear:both
	
.warn
	font-size: 20px
	
	&.success
		color: #45d

div[appmaincenter], div.app-screen
	display: flex
	displayflexdirection: column
	height: 100%
	position: absolute
	left: 0px
	top: 0px
	width: 100%

	div[appmainheader], div[appmainfooter], header, footer
		flex: 0 0 80px
		z-index: 1
		position: relative

	div[appmaincontent], article
		flex: 1 0 auto
		position: relative
		z-index: 1

	div[appmainheader], header
		z-index: 2
		box-shadow: 0px 0px 3px -1px #000