.Banner
  position relative
  
  .banner-arrow-wrap
    text-align center
    position absolute
    bottom 2em
    transform rotate(180deg)
    cursor pointer

  .main-banner
    z-index 0
    displayflex()
    alignitems(center)
    justifycontent(center)
    flexdirection(column)
    padding 7em 0
    min-height 680px
    position relative
    background-image linear-gradient(25deg,rgba(253, 247, 249, 1),rgba(255, 255, 255, 1))

    .container-banner
      displayflex()

    .container-banner-left
      width 45%

      .mobile-gif
        display none
        margin-bottom 2em
        
        img
          display block
          width 100%

    .banner-container
      height 100%
      width 50%
      position absolute
      right 0
      top 0
      bottom 0
      margin auto
      displayflex()
      alignitems(center)

    .banner-container-float
      position absolute
      width 100%
      border-radius 4px 0 0 4px
      box-shadow 0px 3px 10px rgba(150,150,150,.5)

      img
        display block
        width 100%
        height auto

      .seconds
        position absolute
        top 102%
        text-align center
        width 100%

    #RedActionButtonBanner
      display inline-block
      font-size 1.25em

    h1
      font-weight 900
      font-size 4em
      line-height 1em
      color #333

    h4
      font-weight 400
      font-size 1.5em
      line-height 1.75em
      color #333

@media screen and (max-width 1024px)
  .Banner
    font-size .75em
    
    .main-banner
      min-height 350px

@media screen and (max-width 650px)
  .Banner
    font-size .75em
    
    .main-banner
      min-height 0
      padding 4em 0
      
      h1
        margin-top 0
        font-size 3em

      h4
        font-size 1.5em
        line-height 1.25em

      .container-banner-left
        width 100%

        .mobile-gif
          display block

      .banner-container
        display none

    #RedActionButtonBanner
      width 100%
      text-align center
      
    .banner-arrow-wrap
      display none